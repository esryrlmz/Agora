@model (List<City>,List<Category>)

      <form role="form" method="post" asp-controller="Product" asp-action="FilterProductList" >
              <div class="form-inline my-3">
            <div class="input-group">
                @if(@Model.Item1!=null){
              <select  class="custom-select my-1 mr-sm-2" name="city" id=cityList asp-items="@(new SelectList(@Model.Item1,"ID","CityName"))" style="width:230px;">
                 <option value="0"> İl Seçiniz</option>
            </select>
                }else{ <select  id="townList" class="custom-select my-1 mr-sm-2" name="city"  style="width:230px;" >
                  <option value="0"> İl Seçiniz</option>
              </select>}
            </div>
            </div>
          <div class="form-inline my-3">
            <div class="input-group">
              <select  id="townList" class="custom-select my-1 mr-sm-2" name="town"  style="width:230px;" >
                  <option value="0"> İlçe Seçiniz</option>
              </select>
            </div>
           </div>
          <div class="form-inline my-3">
            <div class="input-group">
                 @if(@Model.Item2!=null){
              <select class="custom-select my-1 mr-sm-2" name="UstKategoriID"  id=CategoriList style="width:230px;" asp-items="@(new SelectList(@Model.Item2,"ID","CategoryName"))"  >
                    <option value="0"> Kategori Seçiniz</option>
              </select>
                }else{ <select  id="townList" class="custom-select my-1 mr-sm-2" name="UstKategoriID"  style="width:230px;" >
                  <option value="0"> Kategori Seçiniz</option>
              </select>}        
            </div>
           </div>
          <div class="form-inline my-3">
            <div class="input-group">
              <select  class="custom-select my-1 mr-sm-2" name="AltKategoriID"  style="width:230px;"   id="SubCategoriList" placeholder="Alt Kategori Seçiniz" >
                <option value="0"> Ana Kategoriye Ekle</option>
              </select>
            </div>
          </div>
          <div class="form-inline my-3">
            <div class="input-group">
                <button class="btn btn-primary" type="submit">ARA</button>
            </div>
          </div>
          </form>