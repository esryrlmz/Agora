@model User
                <div class="container-fluid">
                    <!-- /.row -->
  <div class="card" >
  <div class="card-header">
    <b> HESAP BİLGİLERİM </b>
  </div>
  <div class="card-body mb-4" >
                                <div class="panel-body">
								
								 <form role="form" method="post" asp-controller="User"  asp-action="Account" enctype="multipart/form-data">
                                    <div class="row">
                                        <div class="col-lg-6">
                                                
                                                <div class="form-group">
                                                    <label>Kullanıcı Adı: </label>
                                                    <input class="form-control" asp-for="@Model.UserName" disabled>
                                                </div>
                                                 <div class="form-group">
                                                    <label>Parola</label>
                                                    <input class="form-control" type="password" asp-for="@Model.Password" placeholder="Yeni şifre giriniz...">
                                                </div>
                                          </div>
										<div class="col-lg-6">

                                                <div class="form-group">
                                                    <label>Rol</label>
                                                    <input class="form-control" placeholder="Admin" disabled>
                                                </div>  
                                                <div class="form-group">
                                                     <br /> 
                                                    <button type="submit" class="btn btn-primary" >Kaydet</button>  
                                                </div>
                                        </div>
                                    </div>
                                     <input type="hidden" asp-for="@Model.ID"/> 
                                     <input type="hidden" asp-for="@Model.UserName"/> 
                                     <input type="hidden" asp-for="@Model.Role"/> 
                                     </form>
                                </div>
                            </div>
                        </div>
                    </div>
