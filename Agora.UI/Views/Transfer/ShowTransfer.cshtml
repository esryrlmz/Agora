@using Agora.MODEL.Enums
@model (Transfer, List<ProductPicture>, Cargo)

 <div class="row">
 <div class="col-md-6">
    <div class="card" >
      <div class="card-header">
        ÜRÜN SAHİBİ
      </div>
      <div class="list-group">
        <div class="list-group-item">
        <div class="row">
            <div class="col-lg-4"> <b> Ad Soyad </b></div>
            <div class="col-lg-8">  @Model.Item1.Product.User.UserDetail.NameSurname </div>
        </div>
        </div>
        <div class="list-group-item">
            <div class="row">
                <div class="col-lg-4"> <b> Telefon</b></div>
                <div class="col-lg-8">  @Model.Item1.Product.User.UserDetail.Phone </div>
            </div>
        </div>
        <div class="list-group-item">
            <div class="row">
                <div class="col-lg-4"> <b> Email</b></div>
                <div class="col-lg-8">   @Model.Item1.Product.User.UserDetail.Email </div>
            </div>
        </div>
        <div class="list-group-item">
            <div class="row">
                <div class="col-lg-4"><b>  İl/İlce</b></div>
                <div class="col-lg-8">   @Model.Item1.Product.User.UserDetail.Country/@Model.Item1.Product.User.UserDetail.Towner </div>
            </div>
        </div>
      </div>
    </div>
     </div>
     <div class="col-md-6">
    <div class="card" >
      <div class="card-header">
        TRANSFER BİLGİLERİ
      </div>
      <div class="list-group">
        <div class="list-group-item">
        <div class="row">
            <div class="col-lg-4"> <b> Teslim Adresi </b></div>
            <div class="col-lg-8">   @Model.Item1.Adress </div>
        </div>
        </div>
        <div class="list-group-item">
             <div class="row">
                <div class="col-lg-4"> <b> İl/İlce</b></div>
                <div class="col-lg-8">  @Model.Item1.Product.City/  @Model.Item1.Product.Town</div>
            </div>
        </div>
        <div class="list-group-item">
             <div class="row">
               <div class="col-lg-4"> <b> Transfer Durumu</b></div>
               @if(@Model.Item1.ProductStatus==ProductStatus.Rezerved)
               {
                   @if(@Model.Item1.Product.IsCargo==true){ <div class="col-lg-8">  Rezerve Edildi(Kargo Talebi) </div>}
                   else{<div class="col-lg-8">  Rezerve Edildi(Elden Teslim Talebi) </div> }
                   
               }else{
                    @if(@Model.Item1.Product.IsCargo==true)
                    {
                        <div class="col-lg-8">  Kargo ile Transfer ,Kargo Numarası: @Model.Item3.CargoTrackingNumber,  Kargo Firması: @Model.Item3.CargoFirm</div>
                    }
                    else if (@Model.Item1.Product.IsHandDeliver==true)
                    {
                        <div class="col-lg-8">  Elden Transfer </div>
                    }
               }
            </div>
        </div>
        <div class="list-group-item">
            <div class="row">
                <div class="col-lg-4"><b>  Transfer Tarihi</b></div>
                <div class="col-lg-8"> @Model.Item1.TransferDate </div>
            </div>
        </div>
      </div>
    </div>
     </div>

 </div>
 <br>
<div class="row">
    <div class="col-md-6">
    <div class="card" >
      <div class="card-header">
        ÜRÜN RESİMLERİ
      </div>				
		<div class="preview-pic tab-content">
			<div class="tab-pane active" id="pic-1"><img src="@Model.Item2[0].PictureUrl" height="400" width="380"/></div>
			<div class="tab-pane" id="pic-2"><img src="@Model.Item2[1].PictureUrl" height="400" width="380"/></div>
			<div class="tab-pane" id="pic-3"><img src="@Model.Item2[2].PictureUrl" height="400" width="380"/></div>
		</div>
		<ul class="preview-thumbnail nav nav-tabs">
			<li class="active"><a data-target="#pic-1" data-toggle="tab"><img src="@Model.Item2[0].PictureUrl" height="50" width="50"/></a></li>
			<li><a data-target="#pic-2" data-toggle="tab"><img src="@Model.Item2[1].PictureUrl" height="50" width="50"/></a></li>
			<li><a data-target="#pic-3" data-toggle="tab"><img src="@Model.Item2[2].PictureUrl" height="50" width="50"/></a></li>
		</ul>
    </div>
     </div>
     <div class="col-md-6">
       <div class="card" >
      <div class="card-header">
        ÜRÜN BİLGİLERİ
      </div>				
		<div class="list-group-item">
            <div class="row">
                <div class="col-lg-4"> <b> Ürün Adı </b></div>
                <div class="col-lg-8"> @Model.Item1.Product.ShortName </div>
            </div>
        </div>
        <div class="list-group-item">
            <div class="row">
                <div class="col-lg-4"> <b> Açıklama</b></div>
                <div class="col-lg-8"> @Model.Item1.Product.Description </div>
            </div>
        </div>
            <div class="list-group-item">
            <div class="row">
                <div class="col-lg-4"> <b> Eklenme Tarihi </b></div>
                <div class="col-lg-8">  @Model.Item1.Product.CreatedDate </div>
            </div>
        </div>
    </div>      
     </div>

</div>


  
