@model List<Comment>

 <div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span  style="color: #31708f"><b> YORUMLAR </b></span>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" style='font-family:Arial; font-size:90%' id="dataTables-example">
                            <thead>
                                <tr>
                                    <th class="col-md-1">ID No</th>
                                    <th>Ad Soyad</th>
                                    <th>Yorum</th>
                                    <th>Yorum Tarihi</th>
                                    <th>Ürün</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < @Model.Count(); i++)
                                {
                                <tr class="odd gradeA">
                                    <td>@(i+1) </td>
                                    <td> @Model[i].NameSurname</td>
                                    <td>@Model[i].Interpretation</td>
                                    <td>@Model[i].CreatedDate</td>
                                    <td><a asp-controller="Product" asp-area="Management" asp-action="Product" asp-route-id="@Model[i].Product.ID"> @Model[i].Product.ShortName</a></td>
                                    <td>@if (@Model[i].IsCheck==true){ <span>Yayında</span>  }
                                        else{<span>Yayında Değil</span>}
                                     </td>
                                    <td>
                                     <a  class="btn btn-danger" asp-controller="Comment" asp-area="Management" asp-action="CommentDelete" asp-route-id="@Model[i].ID"><i class="fa fa-trash" aria-hidden="true"></i></a>
                                           @if (@Model[i].IsCheck==true){
                                                <a  class="btn btn-success" asp-controller="Comment" asp-area="Management" asp-action="CommentIsPasive" asp-route-id="@Model[i].ID"><i class="fa fa-check-square-o" aria-hidden="true"></i> </a>
                                            }
                                            else
                                            {
                                                <a  class="btn btn-primary" asp-controller="Comment" asp-area="Management" asp-action="CommentIsActive" asp-route-id="@Model[i].ID"><i class="fa fa-window-close-o" aria-hidden="true"></i> </a>
                                            }

                                     </td>
                                </tr>
                                  }
                            </tbody>
                        </table>
                    </div>
                    <!-- Burada ürün onaylıysa check butonu kalkacak, onaysızsa yer alacak bir if gerekiyor -->
                                    
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

              
</div>