@using Agora.MODEL.Enums
@model List<User> 


  <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                   <span  style="color: #31708f"><b> AGORA ADMİN LİSTESİ </b></span>
                                </div>
                                <!-- /.panel-heading -->
                                <div class="panel-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-hover" style='font-family:Arial; font-size:90%' id="dataTables-example">
                                            <thead>
                                                <tr>
                                                    <th class="col-md-1">ID No</th>
                                                    <th>Kullanıcı Adı</th>
                                                    <th>Ad Soyad</th>
                                                    <th>Telefon</th>
                                                    <th>Mail</th>
                                                    <th>İl</th>
                                                    <th>İlce</th>
                                                    <th>Cinsiyet</th>
                                                    <th>İşlem</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                 @for (int i = 0; i < Model.Count(); i++)
                                               {
                                                 <tr class="odd gradeA">
                                                    <td>@(i+1) </td>
                                                    <td>@Model[i].UserName</td>
                                                    <td><a  asp-action="UserProfile" asp-controller="User" asp-route-id="@Model[i].ID" >@Model[i].UserDetail.NameSurname</a></td>
                                                    <td>@Model[i].UserDetail.Phone</td>
                                                    <td>@Model[i].UserDetail.Email</td>
                                                    <td>@Model[i].UserDetail.Country</td>
                                                    <td>@Model[i].UserDetail.Towner</td>
                                                    @if (@Model[i].UserDetail.Gender==Gender.Female) {<td> Kadın   </td>  } else{<td> Erkek   </td> }
                                                    <td>
											         <a  asp-area="Management" asp-controller="User" asp-action="GetUser"   asp-route-id="@Model[i].ID" class="btn btn-info"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> </a>
                                                     <a  asp-area="Management" asp-controller="User" asp-action="UserDelete"   asp-route-id="@Model[i].ID" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>

													</td>
                                                </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- /.table-responsive -->
                                    
                                </div>
                                <!-- /.panel-body -->
                            </div>
                            <!-- /.panel -->
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>
                    <!-- /.row -->

              
                </div>
                <!-- /.container-fluid -->