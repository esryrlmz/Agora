@model List<Product>

 <div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span  style="color: #31708f"><b> ÜRÜN LİSTESİ </b></span>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" style='font-family:Arial; font-size:90%' id="dataTables-example">
                            <thead>
                                <tr>
                                    <th class="col-md-1">ID No</th>
                                    <th>Ürün Sahibi</th>
                                    <th>Ürün Adı</th>
                                    <th>Eklenme Tarihi</th>
                                    <th>Ürün Durumu</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                               @for (int i = 0; i < Model.Count(); i++)
                                {
                                <tr class="odd gradeA">
                                    <td>@(i+1) </td>
                                    <td><a href="#"> @Model[i].User.UserDetail.NameSurname</a></td>
                                    <td>@Model[i].ShortName</td>
                                    <td>@Model[i].CreatedDate</td>
                                     <td>@if(@Model[i].ProductStatus==Agora.MODEL.Enums.ProductStatus.Rezerved){<span>Rezerve Edildi</span>}
                                            else if(@Model[i].ProductStatus==Agora.MODEL.Enums.ProductStatus.Adopted) {
                                                 if(@Model[i].IsCargo){ <span>Kargo ile Transfer Edildi</span>}
                                                else if(@Model[i].IsHandDeliver) { <span> Elden Teslim Edildi</span>}
                                                else{<span> Transfer Şekli Bilinmiyor</span>}
                                            }
                                            else if(@Model[i].ProductStatus==Agora.MODEL.Enums.ProductStatus.Cancel) {<span>Transfer İptal Edildi</span>}
                                            else if(@Model[i].ProductStatus==Agora.MODEL.Enums.ProductStatus.Ownerless) {<span>Yayında</span>}
                                            else {<span>Pasif Durumda</span>}
                                     </td>
                                      <td>
                                      <a  class="btn btn-primary" asp-controller="Product" asp-area="Management" asp-action="Product" asp-route-id="@Model[i].ID"><i class="fa fa-eye" aria-hidden="true"></i> </a>
                                     <a  class="btn btn-info" asp-controller="Product" asp-area="Management" asp-action="Edit" asp-route-id="@Model[i].ID"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> </a>
                                     <a  class="btn btn-danger" asp-controller="Product" asp-area="Management" asp-action="Delete" asp-route-id="@Model[i].ID"><i class="fa fa-trash" aria-hidden="true"></i></a>
                                     </td>
                                </tr>
                                 }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                                    
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

              
</div>
<!-- /.container-fluid -->