                                  <div class="row">
                                      <div class="col-lg-12">
                                         <div class="panel panel-default">
                                            <div class="panel-heading">
                                                <i class="fa fa-truck fa-fw"></i> Transfer Bilgileri
                                                   </div>
   
                                         <div class="panel-body">
                                        <!-- /.panel-heading -->
                                        <div class="row">
                                             <div class="col-lg-6">
                                           <div class="panel-body">
                                             <div class="list-group">
                                                <div class="list-group-item">
                                                   <div class="row">
                                                      <div class="col-lg-4"> <b> Teslim Adresi </b></div>
                                                      <div class="col-lg-8">   @Model.Item1.Adress </div>
                                                  </div>
                                                </div>
                                                <div class="list-group-item">
                                                  <div class="row">
                                                      <div class="col-lg-4"> <b> İl/İlce</b></div>
                                                      <div class="col-lg-8">  @Model.Item1.Product.City/  @Model.Item1.Product.Town</div>
                                                  </div>
                                                </div>
                                               
                                                
                                              </div>
                                            </div>
                                            </div>
                                            <div class="col-lg-6">
                                               <div class="panel-body">
                                                <div class="list-group">
                                                <div class="list-group-item">
                                                  <div class="row">
                                                      <div class="col-lg-4"> <b> Transfer Durumu</b></div>
                                                    @if(@Model.Item1.Product.IsCargo==true)
                                                    {
                                                        <div class="col-lg-8">  Kargo ile Transfer ,Kargo Numarası: @Model.Item3.CargoTrackingNumber,  Kargo Firması: @Model.Item3.CargoFirm</div>
                                                    }
                                                    else if (@Model.Item1.Product.IsHandDeliver==true)
                                                    {
                                                        <div class="col-lg-8">  Elden Transfer </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="col-lg-8">  ... </div>
                                                    }

                                                </div>
                                                </div>
                                                 <div class="list-group-item">
                                                  <div class="row">
                                                      <div class="col-lg-4"><b>  Transfer Tarihi</b></div>
                                                      <div class="col-lg-8"> @Model.Item1.TransferDate </div>
                                                  </div>
                                                </div>
                                                </div>
                                               </div>
                                             </div>
                                         </div>
                                     </div>
                                     </div>
                                 </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-12">
                                         <div class="panel panel-default">
                                            <div class="panel-heading">
                                                <i class="fa fa-truck fa-fw"></i> Transfer Edilen Ürün Bilgileri
                                                  <a asp-controller="Product" asp-area="Management" asp-action="Edit" asp-route-id="@Model.Item1.ProductID" style="color: #31708f; float:right" ><i class="fa fa-pencil-square-o fa-lg"></i> </a>
                                            </div>
   
                                         <div class="panel-body">
                                        <!-- /.panel-heading -->
                                        <div class="row">
                                             <div class="col-lg-4">
                                                    <div class="panel-body">
                                                         <div id="myCarousel" class="carousel slide" data-ride="carousel">
                                                            <!-- Indicators -->
                                                            <ol class="carousel-indicators">
                                                              <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                                              <li data-target="#myCarousel" data-slide-to="1"></li>
                                                              <li data-target="#myCarousel" data-slide-to="2"></li>
                                                            </ol>

                                                            <!-- Wrapper for slides -->
                                                            <div class="carousel-inner">
                                                                <div class="item  active">
                                                                    <img src="@Model.Item2[0].PictureUrl"  >
                                                                </div>
                                                                @for (int i = 1; i <= @Model.Item2.Count-1; i++)
                                                                {
                                                                   <div class="item ">
                                                                    <img src="@Model.Item2[i].PictureUrl"  >
                                                                  </div>                  
                                                                }

                                                            </div>

                                                            <!-- Left and right controls -->
                                                            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                                                              <span class="glyphicon glyphicon-chevron-left"></span>
                                                              <span class="sr-only">Previous</span>
                                                            </a>
                                                            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                                                              <span class="glyphicon glyphicon-chevron-right"></span>
                                                              <span class="sr-only">Next</span>
                                                            </a>
                                                          </div>
               

                                                    </div>
                                             </div>
                                          <div class="col-lg-6">
                                           <div class="panel-body">
                                             <div class="list-group">
                                               
                                                <div class="list-group-item">
                                                   <div class="row">
                                                      <div class="col-lg-4"> <b> Ürün Adı </b></div>
                                                      <div class="col-lg-8"> @Model.Item1.Product.ShortName </div>
                                                  </div>
                                                </div>
                                                <div class="list-group-item">
                                                  <div class="row">
                                                      <div class="col-lg-4"> <b> Açıklama</b></div>
                                                      <div class="col-lg-8"> @Model.Item1.Product.Description </div>
                                                  </div>
                                                </div>
                                                 <div class="list-group-item">
                                                   <div class="row">
                                                      <div class="col-lg-4"> <b> Eklenme Tarihi </b></div>
                                                      <div class="col-lg-8">  @Model.Item1.Product.CreatedDate </div>
                                                  </div>
                                                </div>
                                              </div>
                                            </div>
                                            </div>
                                           
                                         </div>
                                     </div>
                                     </div>
                                 </div>

                                </div>
                                </div>
                                </div>
