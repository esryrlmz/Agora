                                        <!-- /.panel-heading -->
                                        <div class="panel-body">
                                            <div class="list-group">
                                                <div class="list-group-item">
                                                   <div class="row">
                                                      <div class="col-lg-3"> <b> Ad Soyad </b></div>
                                                      <div class="col-lg-3"> @Model.Item1.User.UserDetail.NameSurname </div>
                                                  </div>
                                                </div>
                                                <div class="list-group-item">
                                                  <div class="row">
                                                      <div class="col-lg-3"> <b> Telefon</b></div>
                                                      <div class="col-lg-3"> @Model.Item1.User.UserDetail.Phone </div>
                                                  </div>
                                                </div>
                                                <div class="list-group-item">
                                                  <div class="row">
                                                      <div class="col-lg-3"> <b> Email</b></div>
                                                      <div class="col-lg-3"> @Model.Item1.User.UserDetail.Email </div>
                                                   </div>
                                                </div>
                                                <div class="list-group-item">
                                                  <div class="row">
                                                      <div class="col-lg-3"><b>  İl/İlce</b></div>
                                                      <div class="col-lg-3">  @Model.Item1.User.UserDetail.Country/@Model.Item1.User.UserDetail.Towner </div>
                                                  </div>
                                                </div>
                                               
                                            </div>

                                        </div>
                                    </div>
