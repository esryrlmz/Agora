 @model List<TransferDto>



  <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                   <span  style="color: #31708f"><b> TRANSFER LİSTESİ </b></span>
                                </div>
                                <!-- /.panel-heading -->
                                <div class="panel-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-hover" style='font-family:Arial; font-size:90%' id="dataTables-example">
                                            <thead>
                                                <tr>
                                                    <th class="col-md-1">ID No</th>
                                                    <th>Gönderen</th>
                                                    <th>Talep Eden</th>
                                                    <th>Adres</th>
                                                    <th>İl</th>
                                                    <th>İlce</th>
                                                    <th>Tarih</th>
                                                    <th>Durum</th>
                                                    <th>İşlemler</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                  @for (int i = 0; i < Model.Count(); i++)
                                              {
                                                <tr class="odd gradeA">
                                                    <td>@(i+1) </td>
                                                    <td> <a asp-controller="User" asp-area="Management" asp-action="UserProfile" asp-route-id="@Model[i].ProductUserId">@Model[i].ProductUserName</a></td>
                                                    <td><a asp-controller="User" asp-area="Management" asp-action="UserProfile" asp-route-id="@Model[i].TransferUserId">@Model[i].TransferUserName</a></td>
                                                    <td>@Model[i].Adress</td>
                                                    <td>@Model[i].ProductCity</td>
                                                    <td>@Model[i].ProductTown</td>
                                                    <td>@Model[i].TransferDate</td>
                                                   
                                                    <td>
                                                        @if(@Model[i].ProductStatus==Agora.MODEL.Enums.ProductStatus.Rezerved){<span>Rezerve Edildi</span>}
                                                        else if(@Model[i].ProductStatus==Agora.MODEL.Enums.ProductStatus.Adopted) {
                                                            if(@Model[i].IsCargo){ <span>Kargo ile Transfer Edildi</span>}
                                                            else if(@Model[i].IsHandDeliver) { <span> Elden Teslim Edildi</span>}
                                                            else{<span> Transfer Şekli Bilinmiyor</span>}
                                                        }
                                                        else if(@Model[i].ProductStatus==Agora.MODEL.Enums.ProductStatus.Cancel) {<span>Transfer İptal Edildi</span>}
                                                        else if(@Model[i].ProductStatus==Agora.MODEL.Enums.ProductStatus.Ownerless) {<span>Yayında</span>}
                                                        else {<span>Pasif Durumda</span>}

                                                    </td>
                                                     <td>
											          <a  class="btn btn-info" asp-controller="Transfer" asp-area="Management" asp-action="ShowTransfer" asp-route-id="@Model[i].TransferID"><i class="fa fa-eye" aria-hidden="true"></i> </a>
                                                      @if(@Model[i].ProductStatus==Agora.MODEL.Enums.ProductStatus.Rezerved){
                                                      <a  class="btn btn-danger" asp-controller="Transfer" asp-area="Management" asp-action="TransferCancel" asp-route-id="@Model[i].TransferID" data-toggle="tooltip" data-placement="right" title="Iptal Et"><i class="fa fa-minus-circle" aria-hidden="true"></i></a>
                                                      }
                                                  </td>
                                                </tr>
                                                 }
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- /.table-responsive -->
                                    
                                </div>
                                <!-- /.panel-body -->
                            </div>
                            <!-- /.panel -->
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>
                    <!-- /.row -->

              
                </div>
                <!-- /.container-fluid -->


